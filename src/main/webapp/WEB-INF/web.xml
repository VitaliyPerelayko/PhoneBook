<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>by.itstep.phonebook.controller.impl.ContactControllerServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>phonebook-1.0/add</url-pattern>
    </servlet-mapping>
    <!-- list servlet -->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>by.itstep.phonebook.controller.impl.ContactControllerServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>phonebook-1.0/list</url-pattern>
    </servlet-mapping>

</web-app>